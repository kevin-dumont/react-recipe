{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "esModuleInterop": true
  },
  "include": ["./definitions/**/*", "./src/client/**/*"]
}
